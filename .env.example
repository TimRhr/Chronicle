# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-in-production
# Example: https://deine-domain.tld
PUBLIC_BASE_URL=http://127.0.0.1:5000

# Default language selection (precedence):
# 1) CHRONICLE_DEFAULT_LOCALE (if set)
# 2) Timezone-based mapping via TZ (if possible)
# 3) Fallback: en
#
# Supported locales in this project: de, en, es, fr
#
# TZ examples (IANA): Europe/Berlin, Europe/Paris, Europe/Madrid
TZ=Europe/Berlin
# Leave empty to use TZ mapping. Set explicitly e.g. "de" / "en" / "es" / "fr".
CHRONICLE_DEFAULT_LOCALE=de

# Database (Production)
# Preferred: configure DB_* variables.
# Optional override: set DATABASE_URL (takes precedence over DB_* if set).
# Example: postgresql://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME
# DATABASE_URL=
DB_HOST=db
DB_PORT=5432
DB_NAME=chronicle
DB_USER=chronicle
DB_PASSWORD=chronicle

# Web Push (VAPID)
# Generate via: npm create-vapid-keys or web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# Redis (required for caching, rate limit storage and Socket.IO message queue)
REDIS_URL=redis://chronicle-redis:6379/0

# Registration (set to false to disable user registration)
REGISTRATION_ENABLED=false

# Password reset (local password accounts)
# Link TTL in minutes
PASSWORD_RESET_TOKEN_TTL_MINUTES=30

# Analytics Admin (single admin user for /analytics dashboard)
ANALYTICS_ADMIN_USERNAME=admin
ANALYTICS_ADMIN_PASSWORD=change-me

# Socket.IO
# Leave empty to restrict to same-origin. Use "*" ONLY if you know what you're doing.
SOCKETIO_CORS_ALLOWED_ORIGINS=

# Keycloak SSO (optional)
KEYCLOAK_ENABLED=false
KEYCLOAK_SERVER_URL=https://keycloak.example.com
KEYCLOAK_REALM=your-realm
KEYCLOAK_CLIENT_ID=chronicle
KEYCLOAK_CLIENT_SECRET=your-client-secret

# SMTP (for password reset emails etc.)
SMTP_HOST=
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=no-reply@example.com
SMTP_FROM_NAME=Chronicle
