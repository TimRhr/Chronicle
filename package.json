{
  "name": "chronicle-webapp",
  "version": "1.0.0",
  "description": "Chronicle Flask Webapp with Tailwind CSS",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/static/css/input.css -o ./src/static/css/output.css --minify",
